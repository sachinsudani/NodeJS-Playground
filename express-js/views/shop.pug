extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    if prods.length > 0
        div.grid
            each product in prods
                article.card.product-item
                    header.card__header
                        h1.product__title #{product.title}
                        div.card__image
                            img(src="https://images-na.ssl-images-amazon.com/images/I/51Zymoq7UnL._AC_SY400_.jpg", alt="A Book")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description This is a fantastic book!
                        div.card__actions
                            button.btn Add to Cart
    else
        h1 No products found.
        
